<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template parent="AdwBin" class="TuListItem">
    <child>
      <object class="GtkRevealer" id="revealer">
        <property name="transition-type">crossfade</property>
        <property name="reveal-child">False</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">5</property>
            <child>
              <object class="GtkOverlay" id="overlay">
                <property name="width-request">167</property>
                <property name="height-request">260</property>
                <property name="halign">center</property>
                <!--
                TODO: Add a button to show Picture
                <child type="overlay">
                  <object class="GtkButton">
                    <property name="halign">end</property>
                    <property name="valign">end</property>
                    <property name="icon-name">view-more-symbolic</property>
                    <signal name="clicked" handler="on_view_more_clicked" swap="yes"/>
                    <style>
                      <class name="flat"/>
                      <class name="circular"/>
                      <class name="accent"/>
                    </style>
                  </object>
                </child>
                -->
                <child type="overlay">
                  <object class="GtkSpinner" id="spinner">
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="spinning">True</property>
                  </object>
                </child>
                <child type="overlay">
                  <object class="GtkImage" id="broken">
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="visible">False</property>
                    <property name="icon-name">image-missing-symbolic</property>
                    <property name="icon-size">GTK_ICON_SIZE_LARGE</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="listlabel">
                <property name="justify">center</property>
                <property name="width-request">167</property>
                <property name="ellipsize">end</property>
                <attributes>
                  <attribute name="scale" value="0.9"/>
                  <attribute name="weight" value="PANGO_WEIGHT_BOLD"/>
                </attributes>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="label2">
                <property name="justify">center</property>
                <property name="width-request">167</property>
                <property name="ellipsize">middle</property>
                <attributes>
                  <attribute name="scale" value="0.8"/>
                </attributes>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>