<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="MenuActions" parent="AdwBin">
    <property name="child">
      <object class="GtkGrid" id="grid">
        <property name="accessible-role">group</property>
        <property name="row-spacing">4</property>
        <property name="column-spacing">10</property>
        <property name="halign">center</property>
        <style>
          <class name="reaction-chooser" />
        </style>
        <child>
          <object class="GtkButton">
            <property name="tooltip-text" translatable="yes">Backward</property>
            <property name="icon-name">media-seek-backward-symbolic</property>
            <property name="action_name">mpv.backward</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
            <style>
              <class name="flat" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="play_pause_button">
            <property name="tooltip-text" translatable="yes">Play</property>
            <property name="icon_name">media-playback-start-symbolic</property>
            <property name="action_name">mpv.play-pause</property>
            <layout>
              <property name="column">1</property>
              <property name="row">0</property>
            </layout>
            <style>
              <class name="circular" />
              <class name="flat" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="tooltip-text" translatable="yes">Forward</property>
            <property name="icon-name">media-seek-forward-symbolic</property>
            <property name="action_name">mpv.forward</property>
            <layout>
              <property name="column">2</property>
              <property name="row">0</property>
            </layout>
            <style>
              <class name="circular" />
              <class name="flat" />
            </style>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>